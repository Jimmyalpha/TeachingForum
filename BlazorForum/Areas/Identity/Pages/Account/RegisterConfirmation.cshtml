@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "注册验证";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
    <p>
        <!--
        This app does not currently have a real email sender registered. Setup a free SendGrid account (up to 100 emails per day) and enter your SendGrid User and Key in the Configuration page of the website admin area.
    Normally this would be emailed:
    -->
        >
        <a id="confirm-link" href="@Model.EmailConfirmationUrl">点击以验证你的邮箱</a>
    </p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}
